# Gemini AI Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=rag_testing
MONGODB_COLLECTION=documents

# Model Configuration - RoBERTa Support
USE_ROBERTA=true  # Set to true to use RoBERTa, false for SentenceTransformers
EMBEDDING_MODEL=roberta-base  # Options: roberta-base, roberta-large, or any HuggingFace model
SENTENCE_TRANSFORMER_MODEL=all-MiniLM-L6-v2  # Used when USE_ROBERTA=false
GEMINI_MODEL=gemini-1.5-pro

# RoBERTa Specific Configuration
ROBERTA_DEVICE=  # Leave empty for auto-detection, or specify "cuda" or "cpu"
ROBERTA_BATCH_SIZE=8  # Batch size for processing embeddings
ROBERTA_MAX_LENGTH=512  # Maximum token length for RoBERTa

# RAG Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
TOP_K_RETRIEVAL=5
SIMILARITY_THRESHOLD=0.7